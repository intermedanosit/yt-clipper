# API Settings
API_KEY=your-secret-api-key-change-in-production
MAX_CLIP_DURATION_SECONDS=600

# Database
DATABASE_URL=postgresql+asyncpg://clipper:clipper@postgres:5432/clipper

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=clips
RABBITMQ_QUEUE=clip_jobs
RABBITMQ_DLQ=clip_jobs_dlq
MAX_RETRY_ATTEMPTS=2

# MinIO/S3
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=clips
S3_REGION=us-east-1

# Worker Settings
WORKER_CONCURRENCY=2
TEMP_DOWNLOAD_DIR=/tmp/downloads
